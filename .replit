modules = ["nodejs-20", "postgresql-16", "python-3.11"]
[agent]
expertMode = true
integrations = ["github:1.0.0", "notion:1.0.0"]

[nix]
channel = "stable-25_05"
packages = ["jq", "nano-wallet", "gh"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Backend"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Modern UI"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Auto-Sync"

[[workflows.workflow]]
name = "Backend"
author = "agent"

[workflows.workflow.metadata]
outputType = "console"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "export HEALTH_TLS_RELAX=1 && export DB_SSL_REJECT_UNAUTHORIZED=false && npm run dev"

[[workflows.workflow]]
name = "Modern UI"
author = "agent"

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run dev:web"
waitForPort = 5000

[[workflows.workflow]]
name = "Auto-Sync"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "./autosync.sh"

[[ports]]
localPort = 3000
externalPort = 3000

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 5001
externalPort = 3002

[[ports]]
localPort = 38537
externalPort = 4200

[[ports]]
localPort = 38765
externalPort = 3003

[[ports]]
localPort = 39367
externalPort = 5000

[[ports]]
localPort = 42193
externalPort = 3001

[deployment]
deploymentTarget = "vm"
build = ["npm", "run", "build"]
run = ["npm", "start"]
