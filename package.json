  "scripts": {
    "uptime": "node scripts/ping-health.js",
    "sentry:test": "node -e \"require('@sentry/node').captureMessage('SENTRY_SCRIPT_OK')\"",
    "health:strict": "curl -sS http://localhost:3000/healthz || true",
    "health:relaxed": "HEALTH_TLS_RELAX=1 curl -sS http://localhost:3000/healthz || true",
    "diag:db": "curl -sS http://localhost:3000/diag/db || true",
    "diag:db:json": "curl -sS http://localhost:3000/diag/db || true",

    "dev:web": "npm --prefix apps/coordination_ui run dev",
    "smoke:api": "node scripts/smoke-api.js",

    "test": "jest --runInBand",
    "check:ui": "node scripts/check-ui-coverage.js",

    "test:smoke": "playwright test -g 'contract routes'",
"test:smoke:headed": "PW_SKIP_WEBSERVER=1 BASE_URL=http://localhost:4173 playwright test -g 'contract routes' --headed",
"test:smoke:ui": "PW_SKIP_WEBSERVER=1 BASE_URL=http://localhost:4173 playwright test -g 'contract routes' --ui"

    "test:lint:h1": "node tests/lint-empty-headings.cjs",

    "prebuild": "node -e \"process.exit(0)\"",
    "postinstall": "node -e \"process.exit(0)\"",
    "prepare": "node -e \"process.exit(0)\""
  },

  "description": "Monolithic shell.",
  "main": "server.js",
  "keywords": [],
  "author": "",

