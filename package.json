{
  "name": "eden_erp",
  "private": true,
  "version": "0.1.0",
  "license": "UNLICENSED",
  "scripts": {
    "prestart": "node scripts/verify-db.js",
    "start": "node server.js",
    "dev": "node server.js",
    "build": "npm install && cd apps/coordination_ui && npm install && npm run build",
    "verify": "node -e \"console.log('ok')\"",
    "verify:db": "node scripts/verify-db.js",
    "smoke": "node scripts/smoke.js",
    "smoke:prod": "node scripts/prod-smoke-test.js",
    "job:idle": "NODE_TLS_REJECT_UNAUTHORIZED=0 node jobs/idleReminder.js",
    "db:generate": "drizzle-kit generate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "db:introspect": "drizzle-kit introspect",
    "seed:rbac": "node ./scripts/seed-rbac.mjs",
    "seed:tasks-perms": "node ./scripts/seed-tasks-perms.mjs",
    "postdeploy": "node scripts/postdeploy.mjs",
    "uptime": "node scripts/ping-healthz.js",
    "sentry:test": "node -e \"require('@sentry/node').captureMessage('SENTRY_SCRIPT_OK')\"",
    "health:strict": "curl -sS http://localhost:3000/healthz | jq \".status, .db, .tls, .latency_ms\" || curl -sS http://localhost:3000/healthz",
    "health:relaxed": "HEALTH_TLS_RELAX=1 node . & sleep 1 && curl -sS http://localhost:3000/healthz && killall node || true",
    "diag:db": "curl -sS http://localhost:3000/diag/db | node -e \"const data = require('fs').readFileSync(0, 'utf8'); try { console.log(JSON.stringify(JSON.parse(data), null, 2)); } catch(e) { console.log(data); }\"",
    "diag:db:json": "curl -sS http://localhost:3000/diag/db",
    "dev:web": "npm --prefix apps/coordination_ui run dev",
    "smoke:api": "node scripts/smoke-api.js",
    "test": "jest --runInBand"
  },
  "description": "Monolithic shell.",
  "main": "server.js",
  "keywords": [],
  "author": "",
  "dependencies": {
    "@notionhq/client": "^5.3.0",
    "@octokit/rest": "^22.0.0",
    "@sentry/node": "^10.20.0",
    "@sentry/profiling-node": "^10.20.0",
    "@sentry/react": "^10.22.0",
    "@supabase/supabase-js": "^2.76.1",
    "@tanstack/react-query": "^5.90.5",
    "@types/luxon": "^3.7.1",
    "@types/node-cron": "^3.0.11",
    "dotenv": "^17.2.3",
    "drizzle-orm": "^0.44.6",
    "express": "^5.1.0",
    "express-rate-limit": "^8.1.0",
    "jose": "^6.1.0",
    "jsonwebtoken": "^9.0.2",
    "luxon": "^3.7.2",
    "node-cron": "^4.2.1",
    "nodemailer": "^7.0.9",
    "pg": "^8.16.3",
    "pino": "^10.1.0",
    "pino-http": "^11.0.0",
    "recharts": "^3.3.0",
    "uuid": "^13.0.0",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@playwright/test": "^1.56.1",
    "drizzle-kit": "^0.31.5",
    "jest": "^29.7.0"
  }
}
